{
  "openapi": "3.0.0",
  "info": {
    "title": "My API",
    "version": "1.0.0",
    "description": "Descripción de la API para gestionar libros y autenticación."
  },
  "paths": {
    "/books/": {
      "get": {
        "summary": "Listar libros",
        "description": "Obtiene una lista de todos los libros.",
        "responses": {
          "200": {
            "description": "Lista de libros obtenida correctamente.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Book"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      },
      "post": {
        "summary": "Crear un libro",
        "description": "Crea un nuevo libro en la base de datos.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Book"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Libro creado correctamente.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/books/migrate/": {
      "post": {
        "summary": "Migrar libros en bloque",
        "description": "Crea múltiples libros a partir de una lista enviada en la solicitud.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Libros creados correctamente.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Book"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/books/{book_id}/": {
      "get": {
        "summary": "Obtener un libro",
        "description": "Obtiene la información de un libro por su ID.",
        "parameters": [
          {
            "name": "book_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID del libro a obtener."
          }
        ],
        "responses": {
          "200": {
            "description": "Libro obtenido correctamente.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          },
          "404": {
            "description": "Libro no encontrado."
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      },
      "put": {
        "summary": "Actualizar un libro",
        "description": "Actualiza la información de un libro por su ID.",
        "parameters": [
          {
            "name": "book_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID del libro a actualizar."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Book"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Libro actualizado correctamente.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          },
          "404": {
            "description": "Libro no encontrado."
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      },
      "delete": {
        "summary": "Eliminar un libro",
        "description": "Elimina un libro por su ID.",
        "parameters": [
          {
            "name": "book_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID del libro a eliminar."
          }
        ],
        "responses": {
          "204": {
            "description": "Libro eliminado correctamente."
          },
          "404": {
            "description": "Libro no encontrado."
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/books/average-price/{year}/": {
      "get": {
        "summary": "Calcular precio promedio",
        "description": "Calcula el precio promedio de los libros publicados en un año específico.",
        "parameters": [
          {
            "name": "year",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Año para calcular el precio promedio."
          }
        ],
        "responses": {
          "200": {
            "description": "Precio promedio calculado correctamente.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "year": {
                      "type": "integer"
                    },
                    "average_price": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/api/token/": {
      "post": {
        "summary": "Obtener token JWT",
        "description": "Genera un token de acceso JWT basado en las credenciales del usuario.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token generado correctamente."
          },
          "401": {
            "description": "Credenciales inválidas."
          }
        }
      }
    },
    "/api/token/refresh/": {
      "post": {
        "summary": "Refrescar token JWT",
        "description": "Genera un nuevo token de acceso JWT usando un token de refresco válido.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "refresh": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token refrescado correctamente."
          },
          "401": {
            "description": "Token de refresco inválido."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Book": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "published_date": {
            "type": "string",
            "format": "date"
          },
          "genre": {
            "type": "string"
          },
          "price": {
            "type": "number"
          }
        },
        "required": [
          "title",
          "author",
          "published_date",
          "genre",
          "price"
        ]
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}