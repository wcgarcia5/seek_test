{
    "info": {
        "_postman_id": "example-id-1234",
        "name": "Seek Test",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "localhost:8000/api"
        }
    ],
    "item": [
        {
            "name": "Get All Books",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/books",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "books"
                    ]
                }
            }
        },
        {
            "name": "Create a New Book",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"title\": \"Example Book\",\n    \"author\": \"John Doe\",\n    \"published_date\": \"2025-01-01\",\n    \"genre\": \"Fiction\",\n    \"price\": 29.99\n}"
                },
                "url": {
                    "raw": "{{base_url}}/books",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "books"
                    ]
                }
            }
        },
        {
            "name": "Migrate Books (Bulk Create)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "[\n    {\n        \"title\": \"Clean Code\",\n        \"author\": \"Robert C. Martin\",\n        \"published_date\": \"2008-08-11\",\n        \"genre\": \"Programming\",\n        \"price\": 45.99\n    },\n    {\n        \"title\": \"The Pragmatic Programmer\",\n        \"author\": \"Andrew Hunt and David Thomas\",\n        \"published_date\": \"1999-10-20\",\n        \"genre\": \"Programming\",\n        \"price\": 39.99\n    },\n    {\n        \"title\": \"To Kill a Mockingbird\",\n        \"author\": \"Harper Lee\",\n        \"published_date\": \"1960-07-11\",\n        \"genre\": \"Fiction\",\n        \"price\": 15.99\n    },\n    {\n        \"title\": \"1984\",\n        \"author\": \"George Orwell\",\n        \"published_date\": \"1949-06-08\",\n        \"genre\": \"Fiction\",\n        \"price\": 14.99\n    },\n    {\n        \"title\": \"Design Patterns\",\n        \"author\": \"Erich Gamma, Richard Helm, Ralph Johnson, John Vlissides\",\n        \"published_date\": \"1994-10-21\",\n        \"genre\": \"Programming\",\n        \"price\": 54.95\n    }\n]"
                },
                "url": {
                    "raw": "{{base_url}}/books/migrate",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "books",
                        "migrate"
                    ]
                }
            }
        },
        {
            "name": "Get Book by ID",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/books/:book_id",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "books",
                        ":book_id"
                    ]
                }
            }
        },
        {
            "name": "Get Average Price by Year",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/books/average-price/:year",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "books",
                        "average-price",
                        ":year"
                    ]
                }
            }
        },
        {
            "name": "Token Obtain Pair",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"example_user\",\n    \"password\": \"example_password\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/token",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "token"
                    ]
                }
            }
        },
        {
            "name": "Token Refresh",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/token/refresh",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "token",
                        "refresh"
                    ]
                }
            }
        }
    ]
}